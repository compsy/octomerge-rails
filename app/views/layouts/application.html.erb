<!DOCTYPE html>
<html>
  <head>
    <title>Octomerge</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <% if current_user&.nickname.present? %>
    <script type="text/javascript">
      var CHROME_EXTENSION_URL = 'chrome-extension://<%= current_user.nickname %>';
    </script>
  <% end %>


  <body
    data-width=<%= yield(:frame_width) %>
    data-height=<%= yield(:frame_height) %>
  >
    <%= yield %>
  </body>
</html>
